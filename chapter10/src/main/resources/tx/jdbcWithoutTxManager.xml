<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
    <import resource="applicationContext.xml"/>

    <aop:config proxy-target-class="true">
        <aop:pointcut id="serviceHiberMethod"
                      expression="within(user.UserHibernateService and execution(public * *(..))"/>
        <aop:pointcut id="serviceJdbcMethod"
                      expression="execution(public * user.UserJdbcService(..))"/>
        <aop:advisor pointcut-ref="serviceJdbcMethod" advice-ref="jdbcAdvice" order="0"/>
        <aop:advisor pointcut-ref="serviceJdbcMethod" advice-ref="hiberAdvice" order="1"/>
        <aop:advisor pointcut-ref="serviceJdbcMethod" advice-ref="hiberAdvice" order="1"/>
         <aop:advisor pointcut-ref="serviceJdbcMethod" advice-ref="jtaAdvice" order="1"/>
    </aop:config>
    <tx:advice id="hiberAdvice" transaction-manager="hiberManager">
        <tx:attributes>
            <tx:method name="*"/>
        </tx:attributes>
    </tx:advice>
    <tx:advice id="jdbcAdvice" transaction-manager="jdbcManager">
        <tx:attributes>
            <tx:method name="*"/>
        </tx:attributes>
    </tx:advice>
</beans>